{
  "name": "wasm-image-to-black-white-demo",
  "version": "0.2.0",
  "description": "Convert an image to black&white (various algorithms)",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server",
    "serve": "webpack-dev-server",
    "build": "sh ./build.sh",
    "build-debug": "cargo +nightly build --target wasm32-unknown-unknown && wasm-bindgen target/wasm32-unknown-unknown/debug/wasm_image_to_black_white.wasm --out-dir .",
    "build-release": "cargo +nightly build --release --target wasm32-unknown-unknown && wasm-bindgen target/wasm32-unknown-unknown/release/wasm_image_to_black_white.wasm --out-dir .",
    "bundle": "npm run build-release && webpack"
  },
  "homepage": "https://github.com/AvraamMavridis/wasm-image-to-black-white",
  "repository": {
    "type": "git",
    "url": "https://github.com/AvraamMavridis/wasm-image-to-black-white"
  },
  "devDependencies": {
    "html-webpack-plugin": "^3.2.0",
    "webpack": "^4.0.1",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.0"
  },
  "author": "AvraamMavridis",
  "license": "MIT",
  "dependencies": {
    "wasm-image-to-black-white": "latest"
  }
}
